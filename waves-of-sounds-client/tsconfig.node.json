{
  "compilerOptions": {
    "target": "ES2020",
    "module": "Node16",
    "moduleResolution": "Node16",
    "lib": ["ES2020"],
    "baseUrl": ".",
    "isolatedModules": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "types": ["node"],

    "composite": true,
    "declaration": true,
    "declarationDir": "./.tsbuild",
    "noEmit": false
  },
  "include": ["vite.config.ts"]
}

